<div id="modal-Produto" class="iziModal" data-izimodal-title="Produto" data-izimodal-subtitle="Dados Produto">
    <section>
        <form id="FormDadosProduto">



            <input name="Id" id="Id" value="0" type="number" hidden />

            <div class="content-header">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label>Nome do Produto</label>
                                <input name="nome" id="nome" value="" class="form-control col-12" />
                            </div>
                        </div>

                    </div><!-- /.row -->

                    <div class="row">

                        <div class="col-sm-12">
                            <div class="form-group">
                                <label>Descrição</label>
                                <textarea name="descricao" id="descricao" class="form-control col-12" rows="3"></textarea>
                            </div>
                        </div>
                    </div><!-- /.row -->

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Data de Criação</label>
                                <input type="date" id="dataCriacao" name="dataCriacao" class="form-control" />
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Preço</label>
                                <input type="number" step="0.01" id="preco" name="preco" class="form-control col-12" />
                            </div>
                        </div>
                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div><!-- /.content-header -->

            <footer>
                <button data-iziModal-close>Sair</button>
                <button id="bttSalvarProduto" type="button" class="button">Salvar</button>
            </footer>


        </form>
    </section>
</div>




